{
	"AppName": "locksmith",
	"ArtifactsDest": "downloads",
	"Tasks": [
		"interpolate-source",
		"xc",
		"archive-zip",
		"archive-tar-gz",
    "publish-github"
	],
	"BuildConstraints": "linux,amd64 windows,amd64 darwin,amd64",
	"ResourcesInclude": "README*",
  "BuildSettings": {
    "LdFlagsXVars": {
      "Version": "main.Version"
    }
  },
	"TaskSettings": {
		"publish-github": {
			"apikey": "",
      "body": "See: https://github.com/jaxxstorm/locksmith/blog/master/CHANGELOG.md",
      "include": "*.zip,*.tar.gz",
      "outputFormat": "by-file-extension",
      "owner": "jaxxstorm",
      "repository": "locksmith"
			}
		},
	"ConfigVersion": "0.9"
}
